<ehcache>
    <defaultCache
            maxElementsInMemory="1"
            overflowToDisk="false"
            memoryStoreEvictionPolicy="LFU"
            eternal="false" />

    <cache name="firstPagePosts"
           maxElementsInMemory="1"
           overflowToDisk="false"
           eternal="true" />

    <cache name="topPosts"
           maxElementsInMemory="1"
           overflowToDisk="false"
           eternal="false"
           timeToLiveSeconds="600" /> <!-- 10 minutes -->

    <cache name="incomingMessages"
           maxElementsInMemory="10"
           overflowToDisk="false"
           eternal="false"
           timeToIdleSeconds="600" /> <!-- 10 minutes -->

    <cache name="outcomingMessages"
           maxElementsInMemory="10"
           overflowToDisk="false"
           eternal="false"
           timeToIdleSeconds="600" /> <!-- 10 minutes -->

</ehcache>